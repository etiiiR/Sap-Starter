<mvc:View
	controllerName="ch.coop.starter.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
>
	<MessagePage
		title="{i18n>app_title}"
		text="{i18n>app_title}"
		icon="sap-icon://accept"
		id="page"
		description="{i18n>app_description}"
	>
		<buttons>
			<Button
				text="{i18n>btn_text}"
				press="routeTo('next')"
			/>
			<Button
				text="{i18n>btn_crud}"
				press="routeTo('crud')"
			/>
			<Button
				text="{i18n>btn_smart}"
				press="routeTo('smart')"
			/>
		</buttons>
	</MessagePage>
</mvc:View>